<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <div id="nav-bar">
    <%if !current_user %>
     <div class = "link-collection">
      <%= link_to "Home", "/", class: "nav-bar-link" %>
      <%= link_to "Sign Up", new_user_path, class: "nav-bar-link" %>
      <%= link_to "Log In", login_path, class: "nav-bar-link" %>
    </div>
    <%elsif current_user.admin? %>
     <div class = "link-collection">
      <%= link_to "Create Categories", new_admin_category_path, class: "nav-bar-link" %>
      <%= link_to "Manage Existing Categories", admin_categories_path, class: "nav-bar-link" %>
      <%= link_to "Generate Gifs", new_admin_gif_path, class: "nav-bar-link" %>
      <%= link_to "All Gifs", gifs_path, class: "nav-bar-link" %>
      <%= link_to "Favorites", user_favorites_path(current_user), class: "nav-bar-link"%>
      <%= link_to "Log Out", "/logout", class: "nav-bar-link"%>
     </div>
    <%else%>
     <div class = "link-collection">
      <%= link_to "All Gifs", gifs_path, class: "nav-bar-link"%>
      <%= link_to "Favorites", user_favorites_path(current_user), class: "nav-bar-link"%>
      <%= link_to "Log Out", "/logout", class: "nav-bar-link"%>
     </div>
    <%end%>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
