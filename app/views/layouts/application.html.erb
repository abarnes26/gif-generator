<!DOCTYPE html>
<html>
  <head>
    <title>GifGenerator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <div>
    <%if !current_user %>
      <%= link_to "Sign Up", new_user_path %>
      <%= link_to "Log In", login_path %>
    <%elsif current_user.admin? %>
      <%= link_to "Create Categories", new_admin_category_path %>
      <%= link_to "Manage Existing Categories", admin_categories_path %>
      <%= link_to "Generate Gifs", new_admin_gif_path %>
      <%= link_to "All Gifs", gifs_path %>
      <%= link_to "Favorites", user_favorites_path(current_user)%>
      <%= link_to "Log Out", "/logout"%>
    <%else%>
      <%= link_to "All Gifs", gifs_path %>
      <%= link_to "Favorites", user_favorites_path(current_user)%>
      <%= link_to "Log Out", "/logout"%>
    <%end%>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
