<div id="gif-index">
<h2 id="gif-header"> All Gifs! </h2><br>

<div id="gif-grid">
  <% @categories.each do |category| %>
    <% if category.gifs %>
    <div id="gif-set">
      <h3 id="gif-title"><%= category.name %><br></h3>
      <% category.gifs.each do |gif|%>
        <div id="gif-object">
          <img src="<%= gif.image_path%>">
          <% if current_user %>
            <%= button_to "Favorite!", user_gif_favorites_path(current_user, gif), :method=>:post, class: "favorite-button"  %>
          <% else %>
            <%= button_to "Favorite!", new_user_path, method: :get, class: "favorite-button" %>
          <%end%>
        </div>
      <%end%>
    </div>
  <%end%>
<%end%>
</div>

</div>
